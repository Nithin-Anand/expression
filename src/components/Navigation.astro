---
import "../styles/global.css";

// Get the current pathname
const currentPath = Astro.url.pathname;
---

<ul class="flex space-x-4 md:space-x-6">
    <li>
        <a
            href="/about"
            class={`${
                currentPath.startsWith("/about") ? "text-black-800 font-bold" : "text-black-500"
            } hover:text-blue-800`}
        >
            About
        </a>
    </li>
    <li>
        <a
            href="/gallery"
            class={`${
                currentPath.startsWith("/gallery") ? "text-black-800 font-bold" : "text-black-500"
            } hover:text-blue-800`}
        >
            Gallery
        </a>
    </li>
    <li>
        <a
            href="/blog"
            class={`${
                currentPath.startsWith("/blog") ? "text-black-800 font-bold" : "text-black-500"
            } hover:text-blue-800`}
        >
            Blog
        </a>
    </li>
</ul>