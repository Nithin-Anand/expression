---
import "../styles/global.css";

// Get the current pathname
const currentPath = Astro.url.pathname;
---

<ul class="flex space-x-6">
    <li>
        <a
            href="/"
            class={`${
                currentPath === "/" ? "text-black-800 font-bold" : "text-black-500"
            } hover:text-blue-800`}
        >
            Home
        </a>
    </li>
    <li>
        <a
            href="/about"
            class={`${
                currentPath.startsWith("/about") ? "text-black-800 font-bold" : "text-black-500"
            } hover:text-blue-800`}
        >
            About
        </a>
    </li>
</ul>